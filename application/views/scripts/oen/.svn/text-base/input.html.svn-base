{{include file="./common/shopsearch.html"}}


{{if $errorflg}}
    <ul>
        {{foreach from=$error item=error_message}}
        <li>要素:{{$error_message}}</li>
        {{/foreach}}
    </ul>
{{/if}}

<form enctype="multipart/form-data" id="form_main" name="form_main" action="/oen/insert" method="post">
<p>応援店情報を入力してください。</p>
<div id="map_canvas" style="width:500px; height:300px"></div>
<!-- ▼マップはここ -->

<table class="">
<tr>
    <th>店名</th>
    <td>
       <input type="text" name="shop_name"   id="shop_name"  value="{{$detail.shop_name}}"/>
        <input type="submit" value="お店を検索" id="search_button" /><br>
        <div id="search_results"></div>
    </td>
</tr>
<tr>
    <th>一言</th>
    <td>
       <input type="text" name="explain"   id="explain"  value="{{$detail.explain}}"/>
    </td>
</tr>
<tr>
    <th>画像</th>
    <td>
        <input name="photo" type="file" size="40">
    </td>
</tr>
<tr>
    <th colspan="2">
        <img alt="" src="/img/{{$user_agent}}/shop/{{$detail.photo}}">
    </th>
</tr>

</table>
<input type="hidden" name="oen_id"   id="oen_id"  value="{{$oen_id}}"/>
<input type="hidden" name="shop_id"   id="shop_id"  value="{{$detail.shop_id}}_{{$detail.latitude}}_{{$detail.longitude}}"/>
<input type="hidden" name="latitude"   id="latitude"  value="{{$latitude}}"/>
<input type="hidden" name="longitude"   id="longitude"  value="{{$longitude}}"/>
<input type="hidden" name="photo"    value="{{$detail.photo}}"/>
<input type="submit"  value="登録"/>
</form>

{{include file="./common/footer.html"}}